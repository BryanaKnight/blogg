<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <% if !article.comments.empty? %>
        <% article.comments.each do |comment| %>
          <td><%= comment.commenter %></td>
          <td><%= comment.body %></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>
